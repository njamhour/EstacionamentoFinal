
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Cadastrar", "Setor", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend>Cadastrar Setor</legend>
        <div id="Nome" class="form-group">
            @Html.Label("Nome", new { @class = "control-label col-sm2" })
            <div class="col-sm-10">
                @Html.TextBox("txtNome", "", new { @class = "form-control", @placeholder = "Nome do setor" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit" value="Cadastrar" />
            </div>
        </div>
    </fieldset>
}