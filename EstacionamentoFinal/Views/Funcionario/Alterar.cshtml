@using EstacionamentoFinal.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Funcionario f = ViewBag.Funcionario;
}

    @using (Html.BeginForm("Alterar", "Funcionario", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.Hidden("hdnId", f.IdFuncionario)
        <fieldset>
            <legend>Alterar Funcionario</legend>
            <div id="hdnId" class="form-group">
                @Html.Label("Id", new { @class = "control-label col-sm-2"})
                <div class="col-sm-10">
                    @Html.TextBox("txtId", f.IdFuncionario,
                    new { @class="form-control",
                    @placeholder = "",
                    @readonly = ""})
                </div>
            </div>

            <div id="Nome" class="form-group">
                @Html.Label("Nome", new { @class = "control-label col-sm-2"})
                <div class="col-sm-10">
                    @Html.TextBox("txtNome", f.Nome, new { @class = "form-control", @placeholder = "Digite o nome do funcionario"})
                </div>
            </div>

            <div id="CPF" class="form-group">
                @Html.Label("CPF", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtCPF", f.CPF, new { @class = "form-control", @placeholder = "Digite o CPF do funcionario" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input class="btn btn-primary" type="submit" value="Alterar"/>
                </div>
            </div>
        </fieldset>
    }

