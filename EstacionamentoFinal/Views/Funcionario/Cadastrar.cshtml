
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Cadastrar", "Funcionario", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend>Cadastrar Funcionario</legend>
        <div id="Nome" class="form-group">
            @Html.Label("Nome", new { @class = "control-label col-sm-2"})
            <div class="col-sm-10">
                @Html.TextBox("txtNome", "", new { @class = "form-control", @placeholder = "Digite o nome do funcionario" })
            </div>
        </div>
        <div id="CPF" class="form-group">
            @Html.Label("Nome", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtCPF", "", new { @class = "form-control", @placeholder = "Digite o CPF do funcionario" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit" value="Cadastrar"/>
            </div>
        </div>
    </fieldset>
}


