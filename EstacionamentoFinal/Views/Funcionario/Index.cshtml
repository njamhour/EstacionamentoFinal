@{
    //ViewBag.Title = "Funcionario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<EstacionamentoFinal.Models.Funcionario> funcionario = ViewBag.Funcionarios;
}

<h2>Gerenciamento de Funcionarios</h2>
@Html.ActionLink("Cadastrar Funcionario", "Cadastrar", "Funcionario")
<br />

<table class="table table-striped table-bordered">
    <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>Ações</th>
    </tr>
    @foreach (EstacionamentoFinal.Models.Funcionario Funcionario in funcionario)
    {
        <tr>
            <td>@Funcionario.Nome</td>
            <td>@Funcionario.CPF</td>
            <td>
                @Html.ActionLink("Remover", "Remover", "Funcionario",
               new { id = Funcionario.IdFuncionario},
               new { @class = "btn-sm btn-danger"})

                @Html.ActionLink("Alterar", "Alterar", "Funcionario",
               new { id = Funcionario.IdFuncionario},
                new { @class = "btn-sm btn-warning"})
            </td>
        </tr>
    }
</table>

