
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    List<EstacionamentoFinal.Models.CategoriaVeiculo> VeiculosCategoria = ViewBag.VeiculosCategoria;
}

<h2>Gerenciamento Veiculo</h2>
@Html.ActionLink("Veiculos", "Index", "Veiculo", new { @class = "btn btn-primary" })
@Html.ActionLink("Cadastrar Categoria", "CadastrarCategoria", "Veiculo", new { @class = "btn btn-warning" })
<br />

<table class="table table-striped table-bordered">
    <tr>
        <th>Tamanho</th>
        <th>Valor Hora</th>
        <th>Ações</th>
    </tr>
    @foreach (EstacionamentoFinal.Models.CategoriaVeiculo veiculoCategoria in VeiculosCategoria)
    {
        <tr>
            <td>@veiculoCategoria.Tamanho</td>
            <td>@veiculoCategoria.Valor</td>
            <td>
                @Html.ActionLink("Remover", "RemoverCategoria", "Veiculo",
               new { id = veiculoCategoria.IdCategoria },
               new { @class = "btn-sm btn-danger" })

                @Html.ActionLink("Alterar", "AlterarCategoria", "Veiculo",
               new { id = veiculoCategoria.IdCategoria },
                new { @class = "btn-sm btn-warning" })
            </td>
        </tr>
    }
</table>


