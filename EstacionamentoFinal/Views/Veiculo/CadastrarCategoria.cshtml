@model EstacionamentoFinal.Models.CategoriaVeiculo

@using (Html.BeginForm("CadastrarCategoria", "Veiculo", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Cadastrar Veiculo</legend>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div id="txtTamanho" class="form-group">
            @Html.LabelFor(model => model.Tamanho, new { @class = "control-label col-sm2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Tamanho, new { @class = "form-control", @placeholder = "Placa do veículo" })
                @Html.ValidationMessageFor(model => model.Tamanho, null, new { @class = "text-danger" })
            </div>
        </div>

        <div id="txtValor" class="form-group">
            @Html.LabelFor(model => model.Valor, new { @class = "control-label col-sm2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", @placeholder = "Placa do veículo" })
                @Html.ValidationMessageFor(model => model.Valor, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit" value="Cadastrar" />
            </div>
        </div>
    </fieldset>
}