
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    List<EstacionamentoFinal.Models.Veiculo> veiculos = ViewBag.Veiculos;
}

<h2>Gerenciamento Veiculo</h2>
@Html.ActionLink("Cadastrar Veiculo", "Cadastrar", "Veiculo", new { @class = "btn btn-primary" })
@Html.ActionLink("Categorias", "IndexCategoria", "Veiculo", new { @class = "btn btn-warning" })
<br />

<table class="table table-striped table-bordered">
    <tr>
        <th>Placa</th>
        <th>Modelo</th>
        <th>Categoria</th>
        <th>Ações</th>
    </tr>
    @foreach (EstacionamentoFinal.Models.Veiculo veiculo in veiculos)
    {
        <tr>
            <td>@veiculo.Placa</td>
            <td>@veiculo.Modelo</td>
            <td>@veiculo.CategoriaVeiculo.Tamanho</td>
            <td>
                @Html.ActionLink("Remover", "Remover", "Veiculo",
               new { id = veiculo.IdVeiculo },
               new { @class = "btn-sm btn-danger" })

                @Html.ActionLink("Alterar", "Alterar", "Veiculo",
               new { id = veiculo.IdVeiculo },
                new { @class = "btn-sm btn-warning" })
            </td>
        </tr>
    }
</table>


