@*@model EstacionamentoFinal.Models.Movimentacao*@
@using EstacionamentoFinal.Models
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Movimentacao mov = ViewBag.Movimentacao;
}

@using (Html.BeginForm("Saida", "Movimentacao", FormMethod.Post, new { @class = "form-horizontal" }))
{
    
    <fieldset>
        <legend>Alterar Setor</legend>
        <div id="txtId" class="form-group">
            @Html.Label("ID", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtId", mov.IdMovimentacao, new
           {
               @class = "form-control",
               @placeholder = "",
               @readonly = ""
           })
            </div>
        </div>

        <div id="Entrada" class="form-group">
            @Html.Label("Entrada", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtEntrada", mov.Entrada.ToString("dd/MM HH:mm"), new { @class = "form-control",
                @placeholder = "",
                @readonly = "" })
                @*@Html.DropDownList("Vaga", null,
                    "-- SELECIONE --",
                    new { @class = "form-control" })*@
            </div>
        </div>

        <div id="Saida" class="form-group">
            @Html.Label("Saida", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtSaida", mov.Saida.ToString("dd/MM HH:mm"),
               new { @class = "form-control",
                     @placeholder = "" })
                @*@Html.DropDownList("Vaga", null,
                    "-- SELECIONE --",
                    new { @class = "form-control" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit" value="Saida" />
            </div>
        </div>
    </fieldset>
}


