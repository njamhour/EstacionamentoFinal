
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Cadastrar", "Cliente", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend><b>Cadastrar Cliente</b></legend>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div id="Nome", class="form-group">
            @*@Html.Label("Nome", new { @class = "control-label col-sm-2"})*@
            @*@Html.LabelFor()*@
            <div class="col-sm-10">
                @Html.TextBox("txtNome", "", new { @class = "form-control", @placeholder = "Digite o nome do cliente" })
            </div>
        </div>
        <div id="CPF" , class="form-group">
            @Html.Label("CPF", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtCPF", "", new { @class = "form-control", @placeholder = "Digite o CPF do cliente" })
            </div>
        </div>
        <legend><b>Informações do veículo</b></legend>
        <div id="Placa" , class="form-group">
            @Html.Label("Placa", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtPlaca", "", new { @class = "form-control", @placeholder = "Digite a placa do veiculo" })
            </div>
        </div>
        <div id="Modelo" , class="form-group">
            @Html.Label("Modelo", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtModelo", "", new { @class = "form-control", @placeholder = "Digite o modelo do veiculo" })
            </div>

            @*<div id="Categoria" , class="form-group">
                @Html.Label("Categoria", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtCategoria", "", new { @class = "form-control", @placeholder = "Digite a categoria do veiculo" })
                </div>
            </div>*@

        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit" value="Cadastrar"/>
            </div>
        </div>

    </fieldset>
}


