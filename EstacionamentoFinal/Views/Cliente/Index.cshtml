
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<EstacionamentoFinal.Models.Cliente> clientes = ViewBag.Clientes;
}

<h2>Gerenciamento Clientes</h2>
@Html.ActionLink("Cadastrar Cliente", "Cadastrar", "Cliente")
<br />

<table class="table table-striped table-bordered">
    <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>Ações</th>
    </tr>
    @foreach (EstacionamentoFinal.Models.Cliente cliente in clientes)
    {
        <tr>
            <td>@cliente.Nome</td>
            <td>@cliente.CPF</td>
            <td>
                @Html.ActionLink("Remover", "Remover", "Cliente",
               new { id = cliente.IdCliente },
               new { @class = "btn-sm btn-danger" })

                @Html.ActionLink("Alterar", "Alterar", "Cliente",
               new { id = cliente.IdCliente },
                new { @class = "btn-sm btn-warning" })
            </td>
        </tr>
    }
</table>


